# hw definition file for FAP based on fmuv3

# MCU class and specific type
MCU STM32F4xx STM32F427xx

# board ID for firmware load
APJ_BOARD_ID 113
define CONFIG_HAL_BOARD_SUBTYPE HAL_BOARD_SUBTYPE_CHIBIOS_FAP

# crystal frequency
OSCILLATOR_HZ 16000000
define STM32_PLLM_VALUE 16

# board voltage
STM32_VDD 330U

# ChibiOS system timer
STM32_ST_USE_TIMER 5

# flash size
FLASH_SIZE_KB 2048

# location of application code
define FLASH_BOOTLOADER_LOAD_KB 64
FLASH_USE_MAX_KB 16

# bootloader loads at start of flash
FLASH_RESERVE_START_KB 0

# uarts and USB to run bootloader protocol on
UART_ORDER UART8

# GPS
PE1 UART8_TX UART8
PE0 UART8_RX UART8

# define a LED
PE9 LED_BOOTLOADER OUTPUT HIGH
PE10 LED_ACTIVITY OUTPUT HIGH
define HAL_LED_ON 1

define HAL_USE_EMPTY_STORAGE 1
define HAL_STORAGE_SIZE 15360

